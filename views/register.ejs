<style>
     .heading {
        /* border: 2px solid red; */
        color: white;
        text-align: center;
        font-size: 65px;
        text-shadow: 5px 5px #FF0000;
    }
    body {
        margin: 0;
        padding: 0;
        background-image: url("/images/back5.jpg");
        
    }
    .divanimation{
        animation: bgcolor infinite 5s;
    }

    @keyframes bgcolor {
        0% {
            background: #eccc68;
        }

        20% {
            background: #ff7f50;
        }

        40% {
            background: #ff6348;
        }

        60% {
            background: #ff6b81;
        }

        80% {
            background: #feca57;
        }

        100% {
            background: #eccc68;
        }
    }
</style>

<body>
    <div class="heading"><a href="/" style="text-decoration: none; color: white;">Square One <img src="/images/oneplus.png" width="70px" height="95px"></a></div>
    <div class="row mt-5">
        <div class="col-md-6 m-auto">
            <div class="card card-body divanimation">
                <h1 class="text-center mb-3">
                     Register
                </h1>
            <%-include('./partials/messages.ejs'); %>
                <form action="/users/register" method="POST">
                    <div class="form-group">
                        <label for="name">Name</label>
                        <input type="name" id="name" name="name" class="form-control" placeholder="Enter Name"
                            value="<%= typeof name != 'undefined' ? name : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="collegeid">College ID</label>
                        <input type="number" id="rollnumber" name="rollnumber" " class=" form-control"
                            placeholder="Roll Number"
                            value="<%= typeof rollnumber != 'undefined' ? rollnumber : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="email">Email</label>
                        <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email"
                            value="<%= typeof email != 'undefined' ? email : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" id="password" name="password" class="form-control"
                            placeholder="Create Password"
                            value="<%= typeof password != 'undefined' ? password : '' %>" />
                    </div>
                    <div class="form-group">
                        <label for="password2">Confirm Password</label>
                        <input type="password" id="password2" name="password2" class="form-control"
                            placeholder="Confirm Password"
                            value="<%= typeof password2 != 'undefined' ? password2 : '' %>" />
                    </div>
                    
                    
                    <div class="form-group">
                        <label for="gender">Gender</label>
                        <span style="margin-left: 45px;"><input type="radio" name="gender" id="gender"
                                value="Male">Male</span>
                        <span style="margin-left: 17px;"><input type="radio" name="gender" id="gender"
                                value="Female">Female</span>
                        <span style="margin-left: 17px;"><input type="radio" name="gender" id="gender"
                                value="Other">Other</span>
                        <br>

                    </div>
                    
                    <div class="form-group">
                        <label for="dob">Date Of Birth</label>
                        <input type="date" id="dob" name="dob" required pattern="[0-9]{4}-[0-9]{2}-[0-9]{2}" class="form-control"
                            placeholder="YYYY-MM-DD" onblur="fun()" value="<%= typeof dob != 'undefined' ? dob : '' %>" />
                    </div>
                    
                    <div class="form-group">
                        <label for="contactnumber">Contact Number</label>
                        <input type="number" id="contactnumber" name="contactnumber" min="1000000000" max="9999999999"
                            class="form-control" placeholder="Contact Number"
                            value="<%= typeof contactnumber != 'undefined' ? contactnumber : '' %>" />
                    </div>
                   
                    <button type="submit" class="btn btn-primary btn-block">
                        Register
                    </button>
                </form>
                <p class="lead mt-4">Have An Account? <a href="/users/login">Login</a></p>
            </div>
        </div>
    </div>

    <script>
        function fun(){
            var d = document.getElementById("dob");

            d.value = d.split(' ')[1];
        }
    </script>
</body>